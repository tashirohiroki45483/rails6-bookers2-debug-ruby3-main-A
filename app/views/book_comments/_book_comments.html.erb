<% book.book_comments.each do |book_comment| %>
  <tr class="table table-borderless">
    <td>
      <%= image_tag book_comment.user.get_profile_image, size:"75x75" %><br>
      <%= link_to user_path(book_comment.user) do%>
      <%= book_comment.user.name %>
       <% end %>
    </td>
    <td>
      <%= book_comment.comment %>
    </td>
    <td class="book_comment_<%= book_comment.book.id %>">
      <% if book_comment.user == current_user %>
      <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment),class: "btn btn-sm btn-danger", remote: true, method: :delete %>
      <% end %>
    </td>
  </tr>
<% end %>